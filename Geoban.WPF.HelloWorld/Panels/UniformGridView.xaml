        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geoban.WPF.HelloWorld.Panels"
        mc:Ignorable="d"
        Title="UniformGridView" Height="300" Width="300">
    <Grid>

        <UniformGrid
            Columns="2"
            >
            <Button>1</Button>
            <Button>2</Button>
            <Button>3</Button>
            <Button>4</Button>
            <Button>5</Button>
            <Button>6</Button>
            <Button>7</Button>
            <Button>8</Button>
            <Button>9</Button>
        </UniformGrid>
    </Grid>
</Window>
